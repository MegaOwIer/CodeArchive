{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Compile & Run",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}\\.vscode\\compile.py",
                "${fileDirname}",
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Compile for Debug",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}",
                "-g3",
                "-Wall",
                "-Wextra",
                "-Wl,-stack=1024000000"
            ]
        }
    ]
}